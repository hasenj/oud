@import 'nib'

input#start
    width 40px
    text-align center
input#scale
    width 300px
    word-spacing 1em

#maqam_name
    padding 8px
    font normal 22pt Ubuntu
    color hsl(0, 0%, 32%)
    text-shadow 1px 1px 2px silver


#maqam_section
  pad()
  display inline-block
  width 350px
  margin 12px
  #maqam_ctrls
    margin-left 5px
  #presets
    margin-top 4px

.maqam_list
    margin-top 20px

.maqam_btn
    smooth-button(bg=hsl(195, 34, 62))
    padding 7px
    margin 7px
    display inline-block
    link()
    width 54px
    text-align left
    text-shadow 1px 1px 2px gray
    border-radius 6px
    font normal 11pt Play

.widget_stepper
  font-size 0.8em
  width 40px
  display inline-block
  text-align center
  &.horizontal
    width auto
    margin auto 8px
  .button
    cursor pointer
    user-select none
    color gray
    display inline-block
  .val
    cursor default
    display inline-block
    width 30px
    vertical-align top
    margin auto 4px

.start_widget
  margin-left 20px
  span.text
    font-size 10pt
    
