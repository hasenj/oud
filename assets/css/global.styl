@import 'nib'

global-reset()

body
    margin 0px
    padding 0px

div, p
    user-select text

table.layout // the keyboard layout .. not the page layout
    user-select none

focuscol = silver

*:focus
   box-shadow 0px 0px 3px focuscol
   outline none

pad()
    padding 20px 12px

link()
    cursor pointer
    -moz-user-select none
    -webkit-user-select none
    user-select none

table.layout
    tr, td
        vertical-align top

#header
    background linear-gradient(bottom, hsl(280, 35%, 20%) 5%, hsl(283, 25%, 30%))
    text-shadow 0 1px 1px black
    color hsl(360 - 283, 16%, 80%)
    font normal 18pt Ubuntu
    pad()
    h3
        font normal 10pt Ubuntu
        line-height 1em
        margin 4px 10px 
        display inline-block
    ul.tabs
      margin-left 40px
      display inline-block
      vertical-align middle
      li
        margin 5px 12px
        padding 3px 6px
        display inline-block
        vertical-align middle
        // background-color hsl(300, 11, 40)
        background linear-gradient(top, hsl(300, 15, 37) 5%, hsl(310, 8, 43))
        border-radius 4px
        list-style none
        a
          display block // get rid of weird spacing inside the li element
          font-size 9pt
          color hsl(100, 30, 90)
          text-decoration none

#content
    pad()
    font normal 12pt Ubuntu
    color hsl(0, 0%, 20%)

#maqam_section
    pad()
    display inline-block
    width 300px
    margin-left 10px

#error_box
    border 2px solid red
    border-radius 6px
    background-color hsl(10, 70%, 90%)
    color hsl(20, 80%, 10%)
    font normal 12pt sans
    padding 8px
    margin 10px
    width 90%
    display none

code
    font-family monospace

footer
    margin 40px
    color hsl(160, 10%, 30%)
    font normal 8pt/1.3 monospace
    text-align center
    a
        color: hsl(240, 10%, 30%)
    .links a
        margin 0px 6px

div.text_page
  *
    user-select text
  width 500px
  margin 10px 40px
  p
    margin 10px 2px
  pre, code
    font normal 10pt monospace
  pre
    margin-left 20px

