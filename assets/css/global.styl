@import 'nib'

global-reset()

bgcol = hsl(200, 5, 94)
footer_bgcol = hsl(200, 6, 90)
body
    margin 0px
    padding 0px
    background-color bgcol
    background-image: url('/cream_dust.png')

html, body
    height 100%
    direction rtl

div, p
    user-select text

div#keys
    user-select none

focuscol = silver

*:focus
   box-shadow 0px 0px 3px focuscol
   outline none

pad()
    padding 20px 12px

standout()
    margin 10px 50px

link()
    cursor pointer
    -moz-user-select none
    -webkit-user-select none
    user-select none

div.layout
    padding 0
    margin 0 auto
    width 1000px
    > div
        padding 0
        margin 0

div.app
    text-align right
    > div
        display inline-block
        vertical-align top
    div.controls
        width 400px
        vertical-align top
        direction rtl
        text-align right
    div.keyboard
        width 600px
        direction ltr

body
    font normal 12pt Ubuntu
    color hsl(0, 0%, 20%)

// XXX remove this?!!
#error_box
  div, span
    font normal 12pt sans
    padding 8px
    margin 10px
    width 90%
    border-radius 6px
  .error
    border 2px solid red
    background-color hsl(10, 70, 90)
    color hsl(20, 80, 10)
  .warning
    border 2px solid orange
    background-color hsl(70, 70, 90)
    color hsl(80, 80, 10)

code
    font-family monospace

div.text_page
    *
        user-select text
    width 500px
    margin 10px 40px
    h1
        font-size 1.8em
        font-weight bold
    h2
        font-size 1.3em
    h3
        font-size 1.2em
    h1, h2, h3, p
        margin 13px 2px
    pre, code
        font normal 10pt monospace
    pre
        margin-left 20px

span()
    display inline-block
    float right
    padding 2px 45px
    margin 0 10px

.guide
    margin-top 60px
    border-top 2px solid hsl(30, 93, 24)
    direction rtl
    text-align right
    font-family amiri
    h1
        font-size 24pt
        text-align center
        margin-top 20px
        margin-bottom 10px
        padding-bottom -10px
        border-bottom 1px solid hsl(200, 6, 82)

    p, li
        margin-bottom 16px
        font-size 14pt

    ul
        list-style-type: disc;
        list-style-position: inside;

    .span4
        width 400px
        span()
    .span6
        width 480px
        span()

// fonts
@font-face {
  font-family: 'icons';
  src: url('/fonts/icons.eot') format('embedded-opentype'),
       url('/fonts/icons.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

.icon
    font-family 'icons'
    font-size 22px
    display inline-block
    vertical-align middle

