@import 'nib'

transition()
    vendor('transition', arguments)

unpressed_color = hsl(20, 80, 95)
semipress_color = hsl(40, 60, 87)
press_color = hsl(40, 77, 80)

btn_highlight(color)
    // box-shadow inset 0px -50px 40px -30px color
    background-color color

.ib
    display inline-block

#keys
    borderc = hsl(0, 0, 70)
    bgc = hsl(200, 4, 99)
    *
        user-select none
    .row
      margin 14px 0px // vertical spacing
      .key
        link()
        // background-image url('/key.png')
        // background-repeat no-repeat
        // background-position-x center
        background-color bgc
        border 1px solid borderc
        border-radius 8px
        display inline-block
        width 40px
        height 100px
        // font normal 9pt sans
        text-align center
        text-shadow 0px 0px 2px silver * 1.2
        .half
            height 50px
            line-height 50px
        .upper.half
            height 49px
            border-bottom 1px solid borderc
        .half
            .kb_key
                text-align center
                font-family Arial
                font-size 12px
                font-weight normal
                color hsl(120, 10, 30)
            .note_name
                font normal 18px monospace
                color hsl(270, 20, 60)
        &.pressed
            background-color bgc * 0.8
            color hsl(300, 20, 10)
            // background-image url('/key-pressed.png')
            .kb_key
                // border-color gray
                color hsl(50, 70, 20)
            .note_name
                color hsl(270, 20, 40)
        &.semi_pressed
            // background-image url('/key-semi-pressed.png')
            .kb_key
                color hsl(50, 70, 20)
            .half.lower
                background-color bgc * 0.9
        &.interval_5
            margin-right 9px
        &.interval_7
            margin-right 12px
        &.interval_8, &.interval_9
            margin-right 14px
        &.interval_12
            margin-right 20px

// oud styles
#oud_kb
    direction ltr
    .diwan
        border 1px solid silver
        margin 20px 0px
    .watar
        display block
        // background image watar
    .group
        display inline-block
        // border 1px solid silver
        margin 0px 18px
        .note_name
            text-align center
    .key
        display inline-block
        border-radius 2px
        border 1px solid silver
        width 36px
        height 40px
        text-align center
        &.pressed
            background-color silver

