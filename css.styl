body
    margin 0px
    padding 0px

pad()
    padding 20px 12px

#header
    background-color hsl(280, 16%, 50%)
    color hsl(360 - 280, 16%, 80%)
    font normal 22px Ubuntu
    pad()

#content
    pad()
    font normal 12pt Ubuntu
    color hsl(0, 0%, 20%)

input#start
    width 40px
input#scale
    width 400px

label
    margin 3px 10px
    font normal 10pt Ubuntu
input
    margin 0px 5px
    font normal 10pt monospace

#keys
    margin 40px 0 0 0 
    .key
        display inline-block
        padding 20px 40px
        margin 4px
        font normal 10pt sans
        text-align center
        border 1px solid silver
