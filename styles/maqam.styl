@import 'nib'
@import 'nib/gradients'
@import 'global'

#maqam_section
  text-align right
  direction rtl

maqam-button(bghue=230)
  -reset()
  cursor pointer
  // box-shadow 0px 0px 11px 2px hsl(bghue, 1, 96) inset
  border solid 1px hsl(bghue, 20, 85)
  // background-color white
  display inline-block
  text-align center
  direction rtl
  // font-family amiri
  font-size 1.1em
  text-shadow 1px 1px 2px hsl(150, 40, 60)
  background: linear-gradient(top, 20% white, 280% hsl(0,0,92))
  border-radius 5px
  &:hover
  &.hover
    background: linear-gradient(top, white, 180% hsl(0,0,92))
  &:active
  &.active
    // background-color hsl(190, 20, 80)
    background: linear-gradient(top, hsl(0,0,88), hsl(0,0,98))
    text-shadow 1px 1px 2px hsl(150, 40, 90)


aqua-button(bghue=230)
  -reset()
  outer_border(lite=0)
    outer_shadow_color = hsl(((bghue+20) % 360), 3, 40+lite)
    // box-shadow 0px 0px 1px 1px outer_shadow_color
    border 1px solid (outer_shadow_color * 1.6)
  cursor pointer
  box-shadow 0px 0px 1px 1px hsl(bghue, 1, 90) inset
  outer_border()
  display inline-block
  border-radius 5px
  padding 5px 10px
  font-size 0.9em
  text-shadow 0px 0px 1px hsl(150, 30, 86)
  color hsl(300,20,20)
  grad(lite=89, to=1.1)
    g1 = hsl(bghue,30,lite)
    g2 = hsl(bghue,20,lite*0.96)
    g3 = hsl(bghue,20,lite*to)
    background linear-gradient(top, g1 60%, g2 50%, g3)
  grad()
  &:hover
  &.hover
    outer_border(-14)
    grad(92, 1.5)
  &:active
  &.active
    grad(85)
    outer_border(-8)


.maqam_btn
    maqam-button()
    width 90px
    margin: 5px
    &:active
    &.active
        font-size 1.09em

.btn
    maqam-button()
    margin: 2px;
    widget-font()
    min-width: 20px;
    padding: 4px 8px;
    text-shadow: none
    user-select: none
    *
        user-select: none

.btn.jins
    direction: ltr
    padding: 10px 0px
    width: 84px
    text-align: center

.btn.basenote
    height: 20px
    direction: ltr
    vertical-align middle
    line-height: 20px

.btn-group
    direction ltr
    display inline-block
    .btn
        border-radius: 0px
        margin: 0px;
        border-left-width: 0px;
    .btn:first-child
        border-top-left-radius: 5px
        border-bottom-left-radius: 5px
        border-left-width: 1px;
    .btn:last-child
        border-top-right-radius: 5px
        border-bottom-right-radius: 5px

// a stacking of button groups
.btn-stack
    .btn-group
        .btn
            border-radius 0px
            border-bottom-width: 0px
            border-radius 0px
    .btn-group:first-child
        .btn:first-child
            border-top-left-radius: 5px
        .btn:last-child
            border-top-right-radius: 5px
    .btn-group:last-child
        .btn
            border-bottom-width: 1px
        .btn:first-child
            border-bottom-left-radius: 5px
        .btn:last-child
            border-bottom-right-radius: 5px

.section.maqamPresets
    text-align center
    .btn-group
        margin-top: 10px
        .btn.maqamPreset
            &.maqamName
                width: 60px;
                font-weight bold
            &.maqamBase
                width: 20px;


.jins_controls
    border-radius 5px 5px 0 0
    margin-top: -1px
    .btn-group
        margin-right: -1px
        margin-left: -1px
        .btn:first-child
            border-radius 5px 0 0 0
        .btn:last-child
            border-radius 0 5px 0 0
            padding-right: 1px

span.divider
    color hsla(270, 50, 90, 0.7)

.controls > .panel
    display block
    width 300px
    padding 10px 0px
    background-color hsl(0, 0, 99)
    border 1px solid hsl(0, 0, 90)
    border-radius 5px
    margin-bottom: 10px
    .section
        border-bottom 1px solid hsl(0, 0, 90)
        &:first-child
            margin-top 2px
        &:last-child
            border-bottom none

        &.pad
            padding: 14px 20px 2px

        .label
            width 80px
            display inline-block
            vertical-align middle
        .def
            min-width 120px
            display inline-block
            vertical-align middle

        &.header
            text-align center
            h3
                font-family: amiri, helvetica
                font-size: 18px
                font-weight: bold
                margin-bottom: 4px

.maqam_info
    .section.ajnas
        height 100px
        padding-top 0px
        margin-top: 4px // to accomedate the pointer's 4px up shift

        .pointer
            position: absolute
            background-color hsla(270, 60, 80, 0.2)
            box-shadow 0px 0px 5px 0px hsla(270, 30%, 80%, 0.5) inset
            width: 286px
            height: 30px
            font-size 22px
            border-radius 0px
            border 1px solid silver
            transition: 200ms
            line-height: 27px
            padding-right 14px
            color: hsl(270, 50, 30)
            margin-right: -1px;
            &.first
                margin-top: 0px - 5px
            &.second
                margin-top: 30px - 5px

        .jins
            padding-right 50px
            height: 30px

.rtl
    text-align right
    direction rtl

.ltr
    text-align left
    direction ltr

.logo
    background-image url('/static/images/logo.png')
    background-repeat no-repeat
    background-position top right
    height: 60px
    width: 994px
    border-radius: 0 0 5px 5px
    background-color hsla(270, 50, 99, 0.9)
    border 1px solid silver
    border-top: none
    box-shadow 0x 0px 5px 2px hsl(270, 10, 30)

.maqam_name
    font normal 1.5em amiri
    text-shadow 0 1px 1px black
    color hsl(243, 16, 30)
    direction rtl
    text-align center

