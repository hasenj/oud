unpressed_color = hsl(20, 80, 95)
semipress_color = hsl(40, 60, 87)
press_color = hsl(40, 77, 80)

btn_highlight(color)
    // box-shadow inset 0px -50px 40px -30px color
    background-color color

.ib
    display inline-block

#keys
    borderc = hsl(270, 40, 84)
    borderhilight = hsl(270, 90, 94)
    bgc = hsl(270, 50, 98)
    radiuspx = 8px
    *
        user-select none
    text-align center
    margin-top: 30px
    .row
        margin -10px 0px // vertical spacing
        .key
            link()
            padding 0px
            margin: 0px -2px
            background-image url('/static/images/btn.png')
            background-repeat no-repeat
            background-position-x center
            background-color bgc
            background-size: 100% 100%;
            border 1px solid borderc
            box-shadow 0px 0px 4px 1px hsl(270, 0, 90)
            display inline-block
            width 56px
            height 110px
            text-align center
            text-shadow 0px 0px 2px silver * 1.2
            overflow: hidden
            border-radius: 4px;
            .half
                height 53px
                line-height 60px
                padding 0px
                margin 0px
                overflow: hidden
                text-align center
                &:first-child
                    // border-bottom 1px solid borderc
                .kb_key
                    font-family Verdana
                    font-size 12px
                    font-weight normal
                    color hsl(120, 10, 30)
                    line-height: 50px
                .note_name
                    font normal 18px Baghdad, monospace
                    color hsl(270, 20, 60)
                    line-height: 50px
            &.pressed
                background-image url('/static/images/btn-pressed.png')
                // background-color bgc * 0.8
                color hsl(300, 20, 10)
                border-color: borderhilight
                .kb_key
                    color hsl(50, 70, 20)
                .note_name
                    color hsl(270, 20, 40)
            &.semi_pressed
                background-image url('/static/images/btn-half-pressed.png')
                .kb_key
                    color hsl(50, 70, 20)
                .half.lower
                    // background-color bgc * 0.85
            &.mark
                background-image url('/static/images/btn-marked.png')
            &.mark.pressed
                background-image url('/static/images/btn-marked-pressed.png')
            &.mark.semi_pressed
                background-image url('/static/images/btn-marked-half-pressed.png')
        // XXX remove this stuff
        .separator
            display inline-block
            margin 0px
            padding 0px
            vertical-align top
            margin-top 27px
            line-height: 7px
            font-size 6px
            color white
            text-align center
            font-family: monospace
        .separator_5
            width: 10px
            background-color black
        .separator_7
            width: 14px
            background-color gray * 0.8
        .separator_8, .separator_9
            width: 20px
            background-color black
        .separator_12
            width: 30px
            background-color gray * 0.8

